{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": false,
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": "./src",
    "paths": {
      "@repositories/*": [
        "repositories/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@entities/*": [
        "entities/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}